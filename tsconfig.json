{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Verfügbare Bibliotheken für den Browser-Kontext
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": false,
    "sourceMap": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "baseUrl": "./assets",

    "paths": {
      "@/*": ["ts/*"],
      "@css/*": ["css/*"]
    }

  },
  "include": [
    "assets/ts/**/*.ts" // Welche Dateien sollen vom TS-Checker berücksichtigt werden
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
