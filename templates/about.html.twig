{% extends "base.html.twig" %}

{% block title %}About - Darts Scorer{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto p-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-8">
        <div class="text-center mb-8">
            <svg class="h-16 w-16 mx-auto mb-4" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                <!-- Dartboard SVG -->
                <circle cx="50" cy="50" r="49" fill="#000" stroke="#fff" stroke-width="2"/>
                <circle cx="50" cy="50" r="45" fill="#fff" stroke="#000" stroke-width="1"/>
                <circle cx="50" cy="50" r="38" fill="#000" stroke="#fff" stroke-width="1"/>
                <circle cx="50" cy="50" r="31" fill="#fff" stroke="#000" stroke-width="1"/>
                <circle cx="50" cy="50" r="15" fill="#000" stroke="#fff" stroke-width="1"/>
                <circle cx="50" cy="50" r="8" fill="#dc2626" stroke="#fff" stroke-width="1"/>
                <circle cx="50" cy="50" r="3" fill="#000"/>
                <!-- Sector lines -->
                <line x1="50" y1="1" x2="50" y2="99" stroke="#fff" stroke-width="1"/>
                <line x1="1" y1="50" x2="99" y2="50" stroke="#fff" stroke-width="1"/>
                <line x1="15" y1="15" x2="85" y2="85" stroke="#fff" stroke-width="1"/>
                <line x1="85" y1="15" x2="15" y2="85" stroke="#fff" stroke-width="1"/>
            </svg>
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">PHP Darts Scorer</h1>
            <p class="text-xl text-gray-600 dark:text-gray-300">Version 0.1.2</p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <!-- App Information -->
            <div class="space-y-6">
                <div>
