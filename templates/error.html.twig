{% extends 'base.html.twig' %}

{% block title %}
    Error {{ status_code | default('Occurred') }}
{% endblock %}

{% block body %}
    <section class="bg-white dark:bg-gray-900 py-20">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-6xl font-extrabold text-red-600 dark:text-red-500 mb-4">
                {% block error_code %}
                    {{ status_code | default('Error') }}
                {% endblock %}
            </h1>
            <h2 class="text-3xl font-semibold text-gray-800 dark:text-white mb-6">
                {% block error_title %}
                    Oops! Something went wrong.
                {% endblock %}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
                {% block error_message %}
                    {% if exception and exception.message %}
                        {{ exception.message }}
                    {% elseif message is defined and message %}
                        {{ message }}
                    {% else %}
                        We encountered an unexpected issue. Please try again later or contact support if the problem persists.
                    {% endif %}
                {% endblock %}
            </p>
            <div class="flex space-x-4 justify-center">
                <a href="/" class="px-6 py-3 text-white bg-blue-600 hover:bg-blue-700 rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-800">
                    Go to Homepage
                </a>
                {# You can add a contact support link or other relevant actions here #}
            </div>
        </div>
    </section>
{% endblock %}

